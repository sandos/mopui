@import 'helpers'

body, html
  height 100%

body
  font normal 1em sans-serif
  text-align center

p
  margin-bottom 1em

a
  color #000a68

h1
  font-size 1.5em
  font-weight normal
  margin 1.5em
  color #0057c5
  text-shadow 1px 1px 2px white

#content
  padding 20px

#message, #status
  clear left
  max-height 40px
  min-height 40px
  height 40px
#controls
  float right
  max-width 50%
  min-width 50%
#playlists
  float left
  max-width 50%
  text-align left
  list-style-type none
#playing
  width 100%
  float right
  clear left
  list-style-type none
  text-align left
#playingInfo
  text-align left
  padding-bottom 10px
  font-size large  
#title, #artist
  width 33%
  float left
  height 40px
#album
  float left
  width 34%
  height 40px
td.deletetrack
  cursor pointer;hand
td.skiptotrack
  cursor pointer;hand
td.track
  cursor pointer;hand