!!! 5
html(lang="en")
  head
    != SocketStream
    meta(charset="utf-8")
    title Welcome
  body
    #content
      button#prev prev
      button#play play/pause
      button#next next
      button#rand random
      p#message Attempting to connect to the server over websockets or Socket.IO fallback transports...
      p#status Current status
      div#song
          div#title title
          div#artist artist
          div#album album

      // QUICK CHAT DEMO
      form#demo(onsubmit='return false')
        h3 Quick Chat Demo
        h5 Open this page in multiple tabs or browsers and type a message below
        #chatlog
        input(id='myMessage', type='text', autocomplete='off')
      script(type="text/javascript")
        $("#play").mousedown(function(e){
          SS.server.apa.play(null);
        })
        $("#prev").mousedown(function(e){
          SS.server.apa.prev();
        })
        $("#next").mousedown(function(e){
          SS.server.apa.next();
        })
        $("#rand").mousedown(function(e){
          SS.server.apa.random();
        })


